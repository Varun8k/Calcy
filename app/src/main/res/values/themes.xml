<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Calcy" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <style name="AppTheme" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Customize your theme here -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Theme.Calcy" parent="Base.Theme.Calcy" />
    <style name="commonbutton" parent="Widget.Material3.Button">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:background">@drawable/circle_button</item>
        <item name="android:textSize">25sp</item>
    </style>
    <style name="zero" parent="Widget.Material3.Button">
        <item name="android:layout_width">164dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="backgroundTint">@color/dark_grey</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textAlignment">textStart</item>
    </style>
    <style name="operatorbutton" parent="commonbutton">
        <item name="backgroundTint">@color/yellow</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="digitbutton" parent="commonbutton">
        <item name="backgroundTint">@color/dark_grey</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="upperbutton" parent="commonbutton">
        <item name="backgroundTint">@color/gray</item>
       <item name="android:textColor">@color/black</item>
    </style>
</resources>